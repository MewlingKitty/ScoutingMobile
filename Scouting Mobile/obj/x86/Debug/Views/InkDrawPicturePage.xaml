<Page x:ConnectionId='1'
    x:Class="Scouting_Mobile.Views.InkDrawPicturePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Style="{StaticResource PageStyle}"
    mc:Ignorable="d">
    <Page.Resources>
        <DataTemplate x:Key="BigHeaderTemplate">
            <RelativePanel>
                <TextBlock x:Uid="InkDrawPictureHeader" Margin="{StaticResource SmallLeftMargin}" MaxLines="1" TextTrimming="CharacterEllipsis" RelativePanel.LeftOf="toolbar" RelativePanel.AlignLeftWithPanel="True" />
                <InkToolbar x:ConnectionId='4'
                    x:Name="toolbar"
                    Background="Transparent"
                                               
                    RelativePanel.AlignHorizontalCenterWithPanel="True">
                    <InkToolbarCustomToggleButton
                        x:Uid="InkDrawPicture_TouchInkingButton"
                        Background="Transparent"
                        IsChecked="{Binding Content.TouchInkingButtonIsChecked, ElementName=shellFrame, Mode=TwoWay}">
                        <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}" Glyph="&#xED5F;" />
                    </InkToolbarCustomToggleButton>
                    <InkToolbarCustomToggleButton
                        x:Uid="InkDrawPicture_MouseInkingButton"
                        Background="Transparent"
                        IsChecked="{Binding Content.MouseInkingButtonIsChecked, ElementName=shellFrame, Mode=TwoWay}">
                        <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}" Glyph="&#xE962;" />
                    </InkToolbarCustomToggleButton>
                </InkToolbar>
                <CommandBar
                    x:Name="topCommandBar"
                    RelativePanel.AlignRightWithPanel="True"
                    RelativePanel.RightOf="toolbar"
                    Style="{StaticResource InkCommandBarStyle}">
                    <CommandBar.PrimaryCommands>
                        <AppBarButton x:ConnectionId='6'
                            x:Uid="InkDrawPicture_ZoomInButton"
                            BorderBrush="Transparent"
                            BorderThickness="0,0,0,0"
                                                
                            Icon="ZoomIn" />
                        <AppBarButton x:ConnectionId='7'
                            x:Uid="InkDrawPicture_ZoomOutButton"
                            BorderBrush="Transparent"
                            BorderThickness="0,0,0,0"
                                                 
                            Icon="ZoomOut" />
                    </CommandBar.PrimaryCommands>
                    <CommandBar.SecondaryCommands>
                        <AppBarButton x:ConnectionId='8'
                            x:Uid="InkDrawPicture_OriginalSizeButton"
                            BorderBrush="Transparent"
                            BorderThickness="0,0,0,0"
                                                   
                            Icon="FullScreen" />
                        <AppBarButton x:ConnectionId='9'
                            x:Uid="InkDrawPicture_FitToScreenButton"
                            BorderBrush="Transparent"
                            BorderThickness="0,0,0,0"
                                                     >
                            <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}" Glyph="&#xE73F;" />
                        </AppBarButton>
                        <AppBarSeparator />
                        <AppBarButton x:ConnectionId='10'
                            x:Uid="InkDrawPicture_OpenImageButton"
                            BorderBrush="Transparent"
                            BorderThickness="0,0,0,0"
                                                   >
                            <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}" Glyph="&#xEB9F;" />
                        </AppBarButton>
                        <AppBarButton x:ConnectionId='11'
                            x:Uid="InkDrawPicture_SaveImageButton"
                            BorderBrush="Transparent"
                            BorderThickness="0,0,0,0"
                                                   
                            Icon="Save"
                            IsEnabled="{Binding Content.SaveImageButtonIsEnabled, ElementName=shellFrame, Mode=OneWay}" />
                        <AppBarSeparator />
                        <AppBarButton x:ConnectionId='12'
                            x:Uid="InkDrawPicture_ClearAllButton"
                            BorderBrush="Transparent"
                            BorderThickness="0,0,0,0"
                                                  
                            Icon="Delete"
                            IsEnabled="{Binding Content.ClearAllButtonIsEnabled, ElementName=shellFrame, Mode=OneWay}" />
                    </CommandBar.SecondaryCommands>
                </CommandBar>
            </RelativePanel>
        </DataTemplate>
        <DataTemplate x:Key="SmallHeaderTemplate">
            <InkToolbar x:ConnectionId='2' HorizontalAlignment="Center"                            >
                <InkToolbarCustomToggleButton
                    x:Uid="InkDrawPicture_TouchInkingButton"
                    Background="Transparent"
                    IsChecked="{Binding Content.TouchInkingButtonIsChecked, ElementName=shellFrame, Mode=TwoWay}">
                    <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}" Glyph="&#xED5F;" />
                </InkToolbarCustomToggleButton>
                <InkToolbarCustomToggleButton
                    x:Uid="InkDrawPicture_MouseInkingButton"
                    Background="Transparent"
                    IsChecked="{Binding Content.MouseInkingButtonIsChecked, ElementName=shellFrame, Mode=TwoWay}">
                    <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}" Glyph="&#xE962;" />
                </InkToolbarCustomToggleButton>
            </InkToolbar>
        </DataTemplate>
    </Page.Resources>

    <Grid x:ConnectionId='13' x:Name="ContentArea">
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:ConnectionId='14' x:Name="visualStateGroup"                                                           >
                <VisualState x:ConnectionId='15' x:Name="SmallVisualState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0" />
                    </VisualState.StateTriggers>
                </VisualState>
                <VisualState x:ConnectionId='16' x:Name="BigVisualState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="720" />
                    </VisualState.StateTriggers>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <ScrollViewer x:ConnectionId='17'
            x:Name="canvasScroll"
            ScrollViewer.VerticalScrollBarVisibility="Auto"
            ScrollViewer.HorizontalScrollBarVisibility="Auto"
            Background="{ThemeResource SystemControlPageBackgroundChromeLowBrush}"
            ZoomMode="Enabled">
                <Grid Background="{StaticResource InkCanvasBackground}"
                        Width="{Binding ElementName=inkCanvas, Path=Width}"
                        Height="{Binding ElementName=inkCanvas, Path=Height}"> 
                    <Image x:ConnectionId='26' x:Name="image" Stretch="None" />                       
                    <InkCanvas x:ConnectionId='27' x:Name="inkCanvas"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch" />
            </Grid>
        </ScrollViewer>        
        <CommandBar x:ConnectionId='18'
            x:Name="bottomCommandBar"
            Grid.Row="1"
            Style="{StaticResource InkCommandBarStyle}">
            <CommandBar.PrimaryCommands>
                <AppBarButton x:ConnectionId='19' x:Uid="InkDrawPicture_ZoomInButton" Icon="ZoomIn"                      BorderBrush="Transparent" BorderThickness="0,0,0,0" />
                <AppBarButton x:ConnectionId='20' x:Uid="InkDrawPicture_ZoomOutButton" Icon="ZoomOut"                       BorderBrush="Transparent" BorderThickness="0,0,0,0" />
            </CommandBar.PrimaryCommands>
            <CommandBar.SecondaryCommands>
                <AppBarButton x:ConnectionId='21' x:Uid="InkDrawPicture_OriginalSizeButton" Icon="FullScreen"                         BorderBrush="Transparent" BorderThickness="0,0,0,0" />
                <AppBarButton x:ConnectionId='22' x:Uid="InkDrawPicture_FitToScreenButton"                           BorderBrush="Transparent" BorderThickness="0,0,0,0">
                    <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}" Glyph="&#xE73F;" />
                </AppBarButton>
                <AppBarSeparator/>
                <AppBarButton x:ConnectionId='23' x:Uid="InkDrawPicture_OpenImageButton"                         BorderBrush="Transparent" BorderThickness="0,0,0,0">
                    <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}" Glyph="&#xEB9F;" />
                </AppBarButton>
                <AppBarButton x:ConnectionId='24' x:Uid="InkDrawPicture_SaveImageButton" Icon="Save"                                                                                    BorderBrush="Transparent" BorderThickness="0,0,0,0" />
                <AppBarSeparator/>
                <AppBarButton x:ConnectionId='25' x:Uid="InkDrawPicture_ClearAllButton" Icon="Delete"                                                                                  BorderBrush="Transparent" BorderThickness="0,0,0,0" />
            </CommandBar.SecondaryCommands>
        </CommandBar>
    </Grid>
</Page>

